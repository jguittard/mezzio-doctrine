{
  "name": "zendframework/zend-expressive-doctrine",
  "description": "Set of Doctrine services configured for Zend Expressive",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Julien Guittard",
      "email": "julien.guittard@me.com"
    }
  ],
  "config": {
    "discard-changes": true
  },
  "require": {
    "php": "^7.2",
    "doctrine/orm": "^2.6",
    "doctrine/data-fixtures": "^1.3",
    "doctrine/migrations": "2.0.x-dev",
    "psr/container": "^1.0",
    "zendframework/zend-paginator": "^2.8",
    "zendframework/zend-hydrator": "^3.0",
    "zendframework/zend-validator": "^2.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^2.5",
    "zendframework/zend-coding-standard": "~1.0.0",
    "phpstan/phpstan": "^0.10.6",
    "phpstan/phpstan-strict-rules": "^0.10.1"
  },
  "autoload": {
    "psr-4": {
      "Zend\\Expressive\\Doctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ZendTest\\Expressive\\Doctrine\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev",
      "dev-develop": "1.1-dev"
    },
    "zf": {
      "component": "Zend\\Expressive\\Doctrine",
      "config-provider": "Zend\\Expressive\\Doctrine\\ConfigProvider"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "check": [
      "@cs-check",
      "@test"
    ],
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  },
  "bin": ["bin/doctrine-cli", "bin/doctrine-cli.php"]
}
